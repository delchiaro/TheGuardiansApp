<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="micc.theguardiansapp.NYCActivity">

    <ScrollView
        android:id="@+id/scroll_view_nyc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">



        <LinearLayout
            android:id="@+id/scrolledLayout_nyc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dip"
            android:paddingBottom="0dp"
            android:weightSum="1"
            android:paddingRight="0dp"
            android:padding="0dp"
            android:paddingLeft="0dp">





            <RelativeLayout
                android:id="@+id/fragContainer0_nyc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/card_container_padding_top"
                android:paddingRight="@dimen/card_container_padding_right"
                android:paddingLeft="@dimen/card_container_padding_left"
                android:paddingBottom="@dimen/card_container_padding_bottom"
                >


                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider_nyc"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    />



                <ImageButton
                    android:id="@+id/audio_1_button"
                    android:layout_width="@dimen/play_button_diameter"
                    android:layout_height="@dimen/play_button_diameter"


                    android:layout_alignParentRight="true"
                    android:src="@drawable/sound_icon_small_3"
                    android:scaleType="fitCenter"
                    android:background="#00000000"

                    android:layout_marginBottom="@dimen/audio_button_margin_right"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="false"
                    android:layout_centerVertical="true" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragContainer1_nyc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/card_container_padding_top"
                android:paddingRight="@dimen/card_container_padding_right"
                android:paddingLeft="@dimen/card_container_padding_left"
                android:paddingBottom="@dimen/card_container_padding_bottom">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider_nyc_2"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    />



                <ImageButton
                    android:id="@+id/audio_2_button"
                    android:layout_width="@dimen/play_button_diameter"
                    android:layout_height="@dimen/play_button_diameter"


                    android:layout_alignParentRight="true"
                    android:src="@drawable/sound_icon_small_3"
                    android:scaleType="fitCenter"
                    android:background="#00000000"

                    android:layout_marginBottom="@dimen/audio_button_margin_right"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="false"
                    android:layout_centerVertical="true" />



            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



    <micc.theguardiansapp.dotsProgressBar.DotsProgressBar
        android:id="@+id/dotsProgressBarNY"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />


</RelativeLayout>