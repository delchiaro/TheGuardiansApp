<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="micc.theguardiansapp.FiActivity">



    <ScrollView
        android:id="@+id/scroll_view_fi"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">



    <LinearLayout
        android:id="@+id/scrolledLayout_fi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dip"
        android:paddingBottom="0dp"
        android:weightSum="1"
        android:paddingRight="0dp"
        android:padding="0dp"
        android:paddingLeft="0dp">





        <RelativeLayout
            android:id="@+id/fragContainer0_fi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/card_container_padding_top"
            android:paddingRight="@dimen/card_container_padding_right"
            android:paddingLeft="@dimen/card_container_padding_left"
            android:paddingBottom="@dimen/card_container_padding_bottom">


            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider_accademia"
                android:layout_width="match_parent"
                android:layout_height="250dp"
            />


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_fi_audio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:baselineAlignBottom="true"
                fab:fab_colorNormal="#FFFFFF"
                fab:fab_colorPressed="#FFFFFF"
                custom:fab_size="mini"
                custom:fab_icon="@drawable/play"
                android:layout_gravity="bottom|right"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/slider_accademia"
                android:layout_alignEnd="@+id/slider_accademia"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragContainer1_fi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/card_container_padding_top"
            android:paddingRight="@dimen/card_container_padding_right"
            android:paddingLeft="@dimen/card_container_padding_left"
            android:paddingBottom="@dimen/card_container_padding_bottom">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider_hero_in_accademia"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_fi_audio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:baselineAlignBottom="true"
                fab:fab_colorNormal="#FFFFFF"
                fab:fab_colorPressed="#FFFFFF"
                custom:fab_size="mini"
                custom:fab_icon="@drawable/play"
                android:layout_gravity="bottom|right"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>







    </LinearLayout>
    </ScrollView>



</RelativeLayout>
